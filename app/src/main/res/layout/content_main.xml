<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sanchit.assignment0.MainActivity"
    tools:showIn="@layout/activity_main">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team Registration"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="#00FF00"

            android:id="@+id/treg"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/treg"
            android:id="@+id/tname"
            android:hint="Team name"
            android:textSize="25dp"
            android:background="#FFFFFF"
            android:layout_marginTop="60dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tname"
            android:layout_marginTop="30dp"
            android:id="@+id/n1"
            android:hint="Member 1"
            android:textSize="25dp"
            android:background="#FFFFFF" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/n1"
            android:id="@+id/e1"
            android:layout_marginTop="10dp"
            android:hint="Entry no."

            android:textSize="25dp"
            android:background="#FFFFFF" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/e1"
            android:id="@+id/n2"
            android:layout_marginTop="20dp"
            android:hint="Member 2"

            android:textSize="25dp"
            android:background="#FFFFFF" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/n2"
            android:id="@+id/e2"
            android:layout_marginTop="10dp"
            android:hint="Entry no."

            android:textSize="25dp"
            android:background="#FFFFFF" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/e2"
            android:id="@+id/n3"
            android:layout_marginTop="20dp"
            android:hint="Member 3"

            android:textSize="25dp"
            android:background="#FFFFFF" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/n3"
            android:id="@+id/e3"
            android:layout_marginTop="10dp"
            android:hint="Entry no."

            android:textSize="25dp"
            android:background="#FFFFFF" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/e3"
            android:id="@+id/sub"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:text="Submit"
            android:textSize="35sp"
            android:textColor="#00FF00"
            android:background="#000000"
            />
    </RelativeLayout>
</ScrollView>